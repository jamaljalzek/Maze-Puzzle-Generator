<Page x:Class="Maze_Puzzle_Generator.DisplayedMazePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Maze_Puzzle_Generator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="LightGray"
      Title="DisplayedMazePage"
      Focusable="True"
      KeyDown="Page_KeyDown">

    <StackPanel Name="MainStackPanel" Orientation="Vertical" Margin="25">

        <!-- The displayed maze grid will be added here via code in DisplayedMazePage.xaml.cs. -->

        <Label Name="TotalNumberOfUserMovesMade" Margin="0,10,0,0" HorizontalAlignment="Center">Total moves made: 0</Label>

    </StackPanel>

</Page>
