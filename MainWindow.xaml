<Window x:Class="Maze_Puzzle_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maze_Puzzle_Generator"
        mc:Ignorable="d"
        Title="Maze Generator" Height="250" Width="300"
        Background="LightGray"
        WindowStartupLocation="CenterScreen">


    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

        <Label HorizontalAlignment="Center" Margin="10" FontSize="25">Maze Generator</Label>

        <StackPanel Orientation="Horizontal">

            <Label Margin="5">Select the height of the maze:</Label>

            <ComboBox Name="selectedMazeHeight" Height="25">
                <ComboBoxItem>5</ComboBoxItem>
                <ComboBoxItem>10</ComboBoxItem>
                <ComboBoxItem>15</ComboBoxItem>
                <ComboBoxItem>20</ComboBoxItem>
                <ComboBoxItem>25</ComboBoxItem>
            </ComboBox>

        </StackPanel>

        <StackPanel Orientation="Horizontal">

            <Label Margin="5">Select the width of the maze:</Label>

            <ComboBox Name="selectedMazeWidth" Height="25">
                <ComboBoxItem>5</ComboBoxItem>
                <ComboBoxItem>10</ComboBoxItem>
                <ComboBoxItem>15</ComboBoxItem>
                <ComboBoxItem>20</ComboBoxItem>
                <ComboBoxItem>25</ComboBoxItem>
            </ComboBox>

        </StackPanel>

        <Button Margin="5" Click="LaunchMSPaintButtonClickHandler">Generate!</Button>

    </StackPanel>

</Window>
